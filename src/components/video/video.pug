mixin video(options)
    section.video
        h2.video__title #{options.title}
        p.video__text #{options.text}
        .video__wrapper
            iframe(width="771" height="438" src=`${options.src}` title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)